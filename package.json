{
	"name": "nanomachine",
	"type": "module",
	"version": "1.0.0",
	"description": "A fully-typed and modular state machine builder.",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.d.ts"
		},
		"./graph": {
			"import": "./dist/graph/createGraph.js",
			"require": "./dist/graph/createGraph.cjs",
			"default": "./dist/graph/createGraph.d.ts"
		}
	},
	"scripts": {
		"lint": "biome lint",
		"lint:fix": "biome lint --write",
		"format": "biome format",
		"format:fix": "biome format --write",
		"build": "tsdown src/index.ts src/graph/createGraph.ts -d dist -f esm,cjs --dts",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"keywords": [],
	"author": "Arthur Fontaine <me@arthurfontaine.com>",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@tsconfig/node-ts": "^23.6.1",
		"@tsconfig/node22": "^22.0.2",
		"@tsconfig/strictest": "^2.0.5",
		"@types/node": "^24.2.1",
		"tsdown": "^0.13.4",
		"typescript": "^5.9.2",
		"vitepress": "^1.6.4"
	},
	"dependencies": {
		"nanostores": "^1.0.1",
		"ts-morph": "^26.0.0",
		"type-fest": "^4.41.0"
	}
}
